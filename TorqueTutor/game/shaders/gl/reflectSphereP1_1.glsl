//-----------------------------------------------------------------------------
// Data
//-----------------------------------------------------------------------------
uniform samplerCube cubeMap;

varying vec3 reflectVec;

//-----------------------------------------------------------------------------
// Main                                                                        
//-----------------------------------------------------------------------------
void main()
{
   gl_FragColor = textureCube(cubeMap, reflectVec);
   gl_FragColor = gl_FragColor + vec4( 0.0, 0.0, 0.1, 0.0 );
}
